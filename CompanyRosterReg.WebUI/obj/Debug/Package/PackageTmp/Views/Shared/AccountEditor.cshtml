@model InvitationModel 

@ShowATSResult()
<hr />

<div class="form-group">
    <div class="row">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-lg-2 control-label" })
        @Html.TextBoxFor(m => m.FirstName, GetHtmlAttributes(Model.FirstName != null, "col-lg-10 form-control"))
    </div>
    <div class="row">
        @Html.LabelFor(m => m.MiddleName, new { @class = "col-lg-2 control-label" })
        @Html.TextBoxFor(m => m.MiddleName, GetHtmlAttributes(Model.MiddleName != null,"col-lg-10 form-control" ))
    </div>
    <div class="row">
        @Html.LabelFor(m => m.LastName, new { @class = "col-lg-2 control-label" })
        @Html.TextBoxFor(m => m.LastName, GetHtmlAttributes(Model.LastName != null, "col-lg-10 form-control" ))
    </div>
    <div class="row">
        @Html.LabelFor(m => m.Email, new { @class = "col-lg-2 control-label" })
        @Html.TextBoxFor(m => m.Email, GetHtmlAttributes(Model.Email != null, "col-lg-10 form-control"))
    </div>
    <div class="row">
        @Html.LabelFor(m => m.WorkPhone, new { @class = "col-lg-2 control-label" })
        @Html.TextBoxFor(m => m.WorkPhone, GetHtmlAttributes(Model.WorkPhone != null, "col-lg-10 form-control"))
    </div>
    <div class="row">
        @Html.LabelFor(m => m.HomePhone, new { @class = "col-lg-2 control-label" })
        @Html.TextBoxFor(m => m.HomePhone, GetHtmlAttributes(Model.HomePhone != null, "col-lg-10 form-control"))
    </div>
    <div class="row">
        @Html.LabelFor(m => m.Username, new { @class = "col-lg-2 control-label" })
        @Html.TextBoxFor(m => m.Username, new { @class = "col-lg-10 form-control" })
    </div>
    <div class="row">
        @Html.LabelFor(m => m.Password, new { @class = "col-lg-2 control-label" })
        @Html.PasswordFor(m => m.Password, new { @class = "col-lg-10 form-control" })
    </div>
</div>
@Html.HiddenFor(m => m.InvitationIMIS_ID)
@Html.HiddenFor(m => m.InstituteName)
@Html.HiddenFor(m => m.ATSMethod)
@Html.HiddenFor(m => m.DoNotDuplicateUsername)

@helper ShowATSResult()
{
    if (TempData["ErrorMsg"] != null)
    {
        <p class="ats-result">@TempData["ErrorMsg"].ToString()</p>
    }
}

@functions { 
    object GetHtmlAttributes (bool ReadOnly, string CssClass)
    {
        if (ReadOnly) {
            return new { @class = CssClass, @readonly = "readonly" };
        }
        return new { @class = CssClass };
    }
}