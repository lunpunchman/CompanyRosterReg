@model LoginModel
@{
    ViewBag.Title = "ResetPassword";
}

<h2>Reset Password</h2>
@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.ValidationSummary()
    <div class="row">
        @Html.LabelFor(m => m.Username, new { @class = "col-lg-2 control-label" })
        @Html.TextBoxFor(m => m.Username, new { @class = "col-lg-10 form-control", disabled = "disabled" })
    </div>
    <div class="row">
        @Html.LabelFor(m => m.Password, new { @class = "col-lg-2 control-label" })
        @Html.PasswordFor(m => m.Password, new { @class = "col-lg-10 form-control" })
    </div>
    @Html.HiddenFor(m => m.ATSMethod)
    <p><input name="submit" type="submit" id="btnResetPassword" value="Reset Password" class="btn btn-primary center" /></p>
}

